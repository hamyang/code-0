<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/low_level"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_btn_selector"
            android:text="@string/esay"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/medium_level"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_btn_selector"
            android:text="@string/medium"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/height_level"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_btn_selector"
            android:text="@string/difficulty"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/custom_level"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_btn_selector"
            android:text="@string/custom_level"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>